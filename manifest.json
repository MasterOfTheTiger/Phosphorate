{
  "manifest_version": 2,
  "name": "Phosphorus Option",
  "version": "1.0",
  "icons": {
    "16": "favicon16.png",
    "24": "favicon24.png",
    "32": "favicon32.png",
    "48": "favicon48.png",
    "64": "favicon64.png",
    "128": "favicon128.png" 
  },
  "description": "Simple extension to include an option on Scratch pages to use the Phosphorus player.",
  "content_scripts": [
  {
    "matches": [
      "*://scratch.mit.edu/projects/*"
    ],
    "exclude_matches": [
      "*://scratch.mit.edu/projects/*#fullscreen",
      "*://scratch.mit.edu/projects/*#editor",
      "*://scratch.mit.edu/projects/*/remixtree/",
      "*://scratch.mit.edu/projects/*/remixes/",
      "*://scratch.mit.edu/projects/*/studios/"
    ],
    "js": ["content.js"]
  }

]
}